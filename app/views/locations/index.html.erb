<div class="dashboard">
  <div class="col-md-8 map-div">
    <div id="map"></div>
    <button type="button" class="btn btn-primary" id="tip-btn">Did you make a find?</button>
    <%= form_tag beer_matches_path, id: "tip-box", remote: true do %>
      <button type="button" class="btn btn-link" id="close-tip-btn">
        <i class="fa fa-times"></i>
      </button>
      <%= hidden_field_tag :latitude, "", id: "latitude" %>
      <%= hidden_field_tag :longitude, "", id: "longitude" %>
      <%= select_tag 'beer', options_from_collection_for_select(@beers, "id", "name"),
                              include_blank: false, class: "form-control" %>

      <%= text_field_tag 'location', nil, class: "form-control",
                          placeholder: "Where was it?",
                          onclick: "getLocation()"  %>
      <%= submit_tag value = "Leave a tip!", id: "tip-submit", class: "btn btn-primary" %>
    <% end %>
    <div class="shade">
      <button type="button" class="btn btn-danger" id="back-btn">
        <i class="fa fa-times fa-lg"></i>
      </button>
      <div class="bottom-left">
        <table class="table bottom-left-table">
          <tr>
            <th>Name</th>
            <th>Brewery</th>
            <th>Type</th>
          </tr>
          <% @beers.each do |beer| %>
          <tr>
            <td><%= link_to beer.name, favorites_path(beer_id: beer.id), :method => "post", remote: true %></td>
            <td><%= beer.brewery %></td>
            <td><%= beer.beer_type %></td>
          </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
  <div class="col-md-4 menu">
    <div class="row">
      <div class="col-xs-12">
        <% flash.each do |message_type, message| %>
          <%= content_tag(:div, message,
                            class: "alert alert-#{message_type}") %>
        <% end %>
        <table class="table">
          <thead>
            <tr>
              <th>Name</th>
              <th>Brewery</th>
              <th>Type</th>
            </tr>
          </thead>
          <tbody id="favorite-beer-table">
            <% unless @favorites.nil? %>
            <%= render @favorites %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <%= label_tag "edit" %>
    <%= check_box_tag "edit" %>

    <div class="col-xs-12 btn-div">
      <button type="button" class="btn btn-select" id="new-beers-btn">
        Add more to your selection
      </button>
    </div>

    <div class="text-center sign-in-group">
      <% if current_user.guest? %>
      <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#signupModal">
        Become a member
      </button>
      or<%= link_to " sign in", user_session_path, method: :post %>
      <% elsif user_signed_in? %>
      <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "btn btn-danger btn-lg" %>
      <% else %>
      <h4 class="text-center">Don't see your beer? <br />Get SMS notifications when it shows up</h4>
      <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#signupModal">
        Sign up
      </button>
      <%= link_to "or sign in", user_session_path, method: :post %>
      <% end %>
    </div>
  </div>
</div>

<%= render 'signup_modal' %>

<script type="text/javascript">
  window.Matches = <%= @beer_match_locations.to_json.html_safe %>;
  var $latitudeField = $("#latitude");
  var $longitudeField = $("#longitude");

  <% unless user_signed_in? %>
    $(document).ready( function() {
      $('#startupModal').modal('show');
    });
  <% end %>
</script>





