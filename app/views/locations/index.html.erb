<div class="dashboard">
  <div class="col-md-8 map-div">
    <div id="map"></div>
    <button type="button" class="btn" id="tip-btn">Find Beer?</button>
    <%= form_tag beer_matches_path, id: "tip-box" do %>
      <button type="button" class="btn btn-link" id="close-tip-btn">
        <i class="fa fa-times"></i>
      </button>
      <%= text_field_tag 'beer', nil, class: "form-control",
                          placeholder: "What beer did you find?" %>

      <%= text_field_tag 'location', nil, class: "form-control",
                          placeholder: "Where was it?" %>
      <%= submit_tag value = "Leave a tip!", class: "btn btn-primary" %>
    <% end %>
  </div>
  <div class="col-md-4 menu">
    <div class="row">
      <div class="col-xs-12">
        <table class="table">
          <tr>
            <th>Name</th>
            <th>Brewery</th>
            <th>Type</th>
          </tr>
          <% @first_beers.each do |beer| %>
          <tr>
            <td><%= beer.name %></td>
            <td><%= beer.brewery %></td>
            <td><%= beer.beer_type %></td>
          </tr>
          <% end %>
        </table>
      </div>
    </div>

    <div class="col-xs-12 btn-div">
      <button type="button" class="btn btn-select" id="new-beers-btn">
        Add more to your selection
      </button>
    </div>
  </div>





  <div class="shade">
    <button type="button" class="btn btn-danger" id="back-btn">
      <i class="fa fa-times fa-lg"></i>
    </button>
    <div class="top-left">
      <table class="table top-left-table">
        <tr>
          <th>Name</th>
          <th>Brewery</th>
          <th>Type</th>
        </tr>
        <% @first_beers.each do |beer| %>
        <tr>
          <td><%= beer.name %></td>
          <td><%= beer.brewery %></td>
          <td><%= beer.beer_type %></td>
        </tr>
        <% end %>
      </table>
    </div>
    <div class="bottom-left">
      <table class="table bottom-left-table">
        <tr>
          <th>Name</th>
          <th>Brewery</th>
          <th>Type</th>
        </tr>
        <% @beers.each do |beer| %>
        <tr>
          <td><%= beer.name %></td>
          <td><%= beer.brewery %></td>
          <td><%= beer.beer_type %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>

<script type="text/javascript">
  window.Locations = <%= @locations.to_json.html_safe %>;
</script>
