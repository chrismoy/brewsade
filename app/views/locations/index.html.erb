<div class="dashboard">
  <div class="col-md-8 map-div">
    <div id="map"></div>
    <button type="button" class="btn btn-primary" id="tip-btn">Did you make a find?</button>
    <%= form_tag beer_matches_path, id: "tip-box" do %>
      <button type="button" class="btn btn-link" id="close-tip-btn">
        <i class="fa fa-times"></i>
      </button>
      <%= hidden_field_tag :latitude, "", id: "latitude" %>
      <%= hidden_field_tag :longitude, "", id: "longitude" %>
      <%= select_tag 'beer', options_from_collection_for_select(@beers, "id", "name"),
                              include_blank: false, class: "chosen-select form-control" %>

      <%= text_field_tag 'location', nil, class: "form-control",
                          placeholder: "Where was it?", 
                          onclick: "getLocation()"  %>
      <%= submit_tag value = "Leave a tip!", class: "btn btn-primary" %>
    <% end %>
  </div>
  <div class="col-md-4 menu">
    <div class="row">
      <div class="col-xs-12">
        <table class="table">
          <tr>
            <th>Name</th>
            <th>Brewery</th>
            <th>Type</th>
          </tr>
          <% @favorites.each do |favorite| %>
          <tr>
            <td><%= favorite.beer.name %></td>
            <td><%= favorite.beer.brewery %></td>
            <td><%= favorite.beer.beer_type %></td>
          </tr>
          <% end %>
        </table>
      </div>
    </div>

    <div class="col-xs-12 btn-div">
      <button type="button" class="btn btn-select" id="new-beers-btn">
        Add more to your selection
      </button>
    </div>

    <div class="text-center">
      <h4 class="text-center">Don't see your beer? <br />Get SMS notifications when it shows up</h4>
      <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
        Sign up
      </button>
    </div>
  </div>


  <div class="shade">
    <button type="button" class="btn btn-danger" id="back-btn">
      <i class="fa fa-times fa-lg"></i>
    </button>
    <div class="bottom-left">
      <table class="table bottom-left-table">
        <tr>
          <th>Name</th>
          <th>Brewery</th>
          <th>Type</th>
        </tr>
        <% @beers.each do |beer| %>
        <tr>
          <td><%= link_to beer.name, favorites_path(:beer_id => beer.id), :method => "post" %></td>
          <td><%= link_to beer.brewery, favorites_path(beer), :method => "post" %></td>
          <td><%= link_to beer.beer_type, favorites_path(beer), :method => "post" %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Sign Up</h4>
      </div>
      <div class="modal-body">
        <%= form_for @user, url: user_registration_path do |f| %>
          <div class="row form-group col-sm-8 col-sm-offset-2">
            <%= f.label :phone, class: 'control-label' %>
            <%= f.telephone_field :phone, class: 'form-control', autofocus: 'autofocus', placeholder: 'Enter a phone number...' %>
          </div>

          <div class="row form-group col-sm-8 col-sm-offset-2">
            <%= f.label :password, class: 'control-label' %>
            <%= f.password_field :password, class: 'form-control', autofocus: 'autofocus', placeholder: 'At least 8 characters...' %>
          </div>

          <div class="row form-group col-sm-8 col-sm-offset-2">
            <%= f.label :password_confirmation, class: 'control-label' %>
            <%= f.password_field :password_confirmation, class: 'form-control', autofocus: 'autofocus' %>
          </div>

          <div class="col-sm-8 col-sm-offset-2 text-center form-buttons">
            <p>
              <%= f.submit "Submit", class: "btn btn-success" %>
          </div>
        <% end %>
      </div>
      <!-- <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div> -->
    </div>
  </div>
</div>

<script type="text/javascript">
  window.Matches = <%= @beer_match_locations.to_json.html_safe %>;
  var $latitudeField = $("#latitude");
  var $longitudeField = $("#longitude");
</script>





