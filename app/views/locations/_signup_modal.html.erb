<div class="modal fade" id="signupModal" tabindex="-1" role="dialog" aria-labelledby="user signup" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Sign Up</h4>
      </div>
      <%= form_for @user, url: user_registration_path, method: :post do |f| %>
        <div class="modal-body">
          <div class="row form-group col-sm-8 col-sm-offset-2">
            <%= f.label :email, class: 'control-label' %>
            <%= f.email_field :email, class: 'form-control', autofocus: 'autofocus', placeholder: 'Enter a phone number...' %>
          </div>

          <div class="row form-group col-sm-8 col-sm-offset-2">
            <%= f.label :password, class: 'control-label' %>
            <%= f.password_field :password, class: 'form-control', autofocus: 'autofocus', placeholder: 'At least 8 characters...' %>
          </div>

          <div class="row form-group col-sm-8 col-sm-offset-2">
            <%= f.label :password_confirmation, class: 'control-label' %>
            <%= f.password_field :password_confirmation, class: 'form-control', autofocus: 'autofocus' %>
          </div>
        </div>
        <div class="modal-footer">
          <div class="col-sm-8 col-sm-offset-2 text-center form-buttons">
            <%= f.submit "Submit", class: "btn btn-success" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
