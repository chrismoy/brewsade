<div class="modal fade" id="startupModal" tabindex="-1" role="dialog" aria-labelledby="user-startup" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title text-center" id="user-startup">Interested in being notified when someone finds your beer?</br>Signup now!</h4>
        <h4 class="text-center"><small>or <%= link_to "try as guest", user_registration_path, method: :post %></small></h4>
      </div>
      <%= form_for @user, url: user_registration_path, method: :post do |f| %>
        <div class="modal-body">
          <div class="row form-group col-sm-8 col-sm-offset-2">
            <%= f.label :phone, class: 'control-label' %>
            <%= f.telephone_field :phone, class: 'form-control', autofocus: 'autofocus', placeholder: 'Enter a phone number...' %>
          </div>

          <div class="row form-group col-sm-8 col-sm-offset-2">
            <%= f.label :password, class: 'control-label' %>
            <%= f.password_field :password, class: 'form-control', autofocus: 'autofocus', placeholder: 'At least 8 characters...' %>
          </div>

          <div class="row form-group col-sm-8 col-sm-offset-2">
            <%= f.label :password_confirmation, class: 'control-label' %>
            <%= f.password_field :password_confirmation, class: 'form-control', autofocus: 'autofocus' %>
          </div>
        </div>
        <div class="modal-footer">
          <div class="col-sm-8 col-sm-offset-2 text-center form-buttons">
            <%= f.submit "Submit", class: "btn btn-success" %>
            <h4><small>or <%= link_to "sign in", new_user_session_path %></small></h4>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
